    "sqlite3": "^5.1.7",
    "tslib": "^2.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.9"
  },
  "nx": {}
